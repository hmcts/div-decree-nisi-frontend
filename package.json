{
  "name": "divorce-decree-nisi",
  "description": "Divorce Decree Nisi",
  "version": "0.0.2",
  "engines": {
    "node": ">=10.15.2"
  },
  "jest": {
    "verbose": true,
    "testURL": "https://localhost:3000"
  },
  "scripts": {
    "start": "NODE_PATH=. node server.js",
    "setup": "NODE_PATH=.",
    "dev": "NODE_PATH=. node-dev server.js",
    "dev-debug": "NODE_PATH=. node-dev --inspect=0.0.0.0:9228 server.js",
    "mocks": "NODE_PATH=. node-dev mocks/index.js",
    "test": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF nyc mocha --opts 'test/unit/mocha.opts' --exit 'test/unit/**/*.test.js' --timeout 5000",
    "test:all": "yarn lint; yarn test:unit; yarn test:a11y; yarn test:validation; yarn test:nsp",
    "test:unit": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF mocha --opts 'test/unit/mocha.opts' --exit 'test/unit/**/*.test.js' --timeout 5000",
    "test:smoke": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/functional/codecept.smoke.conf.js --steps --invert",
    "test:overnight": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run-multiple saucelabs -c test/functional/codecept.overnight.conf.js --steps",
    "test:e2e": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR mocha --exit 'test/e2e/**/*.js' --timeout 5000",
    "test:coverage": "nyc check-coverage",
    "test:a11y": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF mocha --exit test/a11y --timeout 15000",
    "test:nsp": "nsp check",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "test:functional": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/functional/codecept.conf.js --steps --invert",
    "test:functional:remote": "NODE_PATH=. POINT_TO_REMOTE=true LOG_LEVEL=OFF codeceptjs run -c test/functional/codecept.conf.js --steps --invert",
    "test:crossbrowser": "./bin/run-crossbrowser-tests.sh",
    "test-crossbrowser-e2e": "NODE_PATH=. NODE_ENV=ci  LOG_LEVEL=ERROR node_modules/.bin/codeceptjs run-multiple  ${BROWSER_GROUP:-'--all'} -c test/functional/saucelabs.conf.js --steps --reporter mochawesome",
    "test:validation": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF mocha --exit test/w3cjs",
    "lint": "eslint ."
  },
  "pre-commit": "lint",
  "dependencies": {
    "@hmcts/ctsc-web-chat": "^0.3.9",
    "@hmcts/div-document-express-handler": "^1.1.0",
    "@hmcts/div-idam-express-middleware": "^6.5.0",
    "@hmcts/look-and-feel": "^4.0.4",
    "@hmcts/node-js-environment-variable-setter": "https://github.com/hmcts/node-js-environment-variable-setter#0.2",
    "@hmcts/nodejs-healthcheck": "^1.5.1",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@hmcts/one-per-page": "^5.3.0",
    "@hmcts/properties-volume": "^0.0.9",
    "applicationinsights": "^1.0.3",
    "cookie-parser": "^1.4.3",
    "cookies": "^0.7.1",
    "copy-webpack-plugin": "^4.5.2",
    "dropzone": "^5.5.1",
    "express": "^4.16.3",
    "express-limiter": "^1.6.1",
    "formidable": "^1.2.1",
    "glob": "^7.1.2",
    "govuk-frontend": "^2.11.0",
    "helmet": "^3.12.0",
    "hpkp": "^2.0.0",
    "http-status-codes": "^1.3.0",
    "i18next": "^11.3.1",
    "ioredis": "^3.2.2",
    "joi": "^13.3.0",
    "jsoneditor": "^5.24.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.1",
    "os": "^0.1.1",
    "paths": "^0.1.1",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "superagent": "^3.8.3",
    "tmp": "^0.0.33",
    "util": "^0.11.0"
  },
  "devDependencies": {
    "@hmcts/div-idam-test-harness": "^1.5.0",
    "@hmcts/div-test-harness": "https://github.com/hmcts/div-test-harness#a459aaa16a92cb13e0dac35c32bf559ad79de6a6",
    "@hmcts/node-js-environment-variable-setter": "https://github.com/hmcts/node-js-environment-variable-setter#0.2",
    "@hmcts/one-per-page-test-suite": "^4.0.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-jq": "^0.0.9",
    "codeceptjs": "^2.0.7",
    "domino": "^2.0.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-mocha": "^5.0.0",
    "ioredis-mock": "^4.16.0",
    "istanbul": "^0.4.5",
    "istanbul-api": "1.2.2",
    "istanbul-reports": "1.1.4",
    "jest": "^22.4.2",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.2",
    "mockserver": "^2.1.1",
    "node-dev": "^3.1.3",
    "nsp": "3.2.1",
    "nyc": "12.0.1",
    "pa11y": "^4.0.1",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.0.1",
    "puppeteer": "^1.4.0",
    "randomstring": "^1.1.5",
    "require-directory": "^2.1.1",
    "rewire": "^4.0.1",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^3.0.0",
    "w3cjs": "^0.4.0",
    "webdriverio": "^4.13.1",
    "zepto-node": "^1.0.0"
  },
  "resolutions": {
    "braces": "^2.3.1",
    "lodash": "^4.17.11",
    "assign-deep": ">=1.0.1",
    "marked": ">=0.7.0"
  },
  "nyc": {
    "report-dir": "coverage",
    "temp-directory": "./coverage/.nyc_output",
    "check-coverage": true,
    "per-file": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "exclude": [
      "services/redis.js",
      "steps/cookies-policy/",
      "steps/privacy-policy/",
      "steps/terms-and-conditions/",
      "test/**/*"
    ]
  }
}
